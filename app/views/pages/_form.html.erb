<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(@page , html: { role: :form }) do |f| %>
          <% if @page.errors.any? %>
            <div class="alert alert-danger">
              <%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:
              <ul>
              <% @page.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :title %><small> (will appear in website's navbar)</small><br>
            <%= f.text_field :title, class: "form-control input-with-feedback nikofe-input" %>
          </div>
          <div class="form-group">
            <%= f.label :body %><br>
            <%= f.bootsy_area :body, class: "form-control", rows: 20 %>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-default btn-xs" id="extras-btn">Extras</button>
          </div>
          <div class="well" id="extra">
            <div class="form-group">
              <%= f.label :video %><small> (If you want to add a Youtube video, enter the code after "watch=?")</small><br>
              <%= f.text_field :video_code, class: "form-control input-with-feedback nikofe-input sm-input" %>
            </div>
            <div class="form-group">
              <%= f.label :address %><small> (If you want to add a map beneath the page's body, enter full address (street, city, country).)</small><br>
              <%= f.text_field :address, class: "form-control input-with-feedback nikofe-input" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :navbar_item_id %><br>
            <%= f.select :navbar_item_id, @navbar_items.collect {|i| [ i.name, i.id ] }, { include_blank: true },
              class: "form-control nikofe-input sm-input" %>
          </div>
          <div><%= f.submit @button_text, class: "btn btn-default" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $("#extras-btn").on("click", function(){
      $("#extra").toggle();
    });
  });
</script>
