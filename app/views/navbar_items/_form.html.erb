<div class="row">
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(@navbar_item, html: { role: :form }) do |f| %>
          <% if @navbar_item.errors.any? %>
            <div class="alert alert-danger">
              <%= pluralize(@navbar_item.errors.count, "error") %> prohibited this navbar item from being saved:
              <ul>
              <% @navbar_item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div><%= f.submit @button_text, class: "btn btn-default" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

