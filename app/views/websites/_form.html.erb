<div class="row">
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(@website, html: { role: :form, multipart: true }) do |f| %>
          <% if @website.errors.any? %>
            <div class="alert alert-danger">
              <%= pluralize(@website.errors.count, "error") %> prohibited this website from being saved:
              <ul>
              <% @website.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :home_title %> <small>(the title on your homepage)</small><br>
            <%= f.text_field :home_title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :home_body %> <small>(the text under the title on your homepage)</small><br>
            <%= f.text_area :home_body, class: "form-control", rows: 7 %>
          </div>
          <div class="form-group">
            <%= f.label :home_cover %> <small>(the background photo for your homepage)</small><br>
            <%= f.file_field :home_cover, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :navbar_color %><br>
            <%= f.color_field :navbar_color, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :navbar_text_color %><br>
            <%= f.color_field :navbar_text_color, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :jumbotron_text_color %><br>
            <%= f.color_field :jumbotron_text_color, class: "form-control" %>
          </div>
          <div><%= f.submit @button_text, class: "btn btn-default" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
