<% provide(:title, "Change your password") %>

<h2 class="cms-heading">Change your password</h2>

<div class="row">
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:
              <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, "New password" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div><%= f.submit "Change my password", class: "btn btn-default" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

