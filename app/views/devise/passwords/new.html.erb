<% provide(:title, "Forgot your password?") %>

<h2 class="cms-heading">Forgot your password?</h2>

<div class="row">
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:
              <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div><%= f.submit "Send me reset password instructions", class: "btn btn-default" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

