<% provide(:title, "Sign up") %>

<h2 class="cms-heading">Sign up</h2>

<div class="row">
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-body">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: :form }) do |f| %>
				
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:
              <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

				  <div class="form-group">
				  	<%= f.label :email %>
				  	<%= f.email_field :email, autofocus: true, class: "form-control nikofe-input" %>
				  </div>

				  <div class="form-group">
				  	<%= f.label :password %>  <small>(minimum 8 characters)</small>
				  	<%= f.password_field :password, autocomplete: "off", class: "form-control nikofe-input" %>
				  </div>

				  <div class="form-group">
				  	<%= f.label :password_confirmation %>
				  	<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control nikofe-input" %>
				  </div>

				  <div><%= f.submit "Sign up", class: "btn btn-default" %></div>
				<% end %>
			</div>
		</div>
	</div>
</div>
